							"mode": "raw",
							"raw": "{\n    \"title\": \"첫 번째 게시글\",\n    \"content\": \"안녕하세요. 게시판 테스트 중입니다.\",\n    \"writer\": \"테스터\",\n    \"password\": \"1234\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/posts/{{board_name}}",
							"host": ["{{base_url}}"],
							"path": ["posts", "{{board_name}}"]
						}
					}
				},
				{
					"name": "Create Post - HTML Content",
